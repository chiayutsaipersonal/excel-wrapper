{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {}
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "**/__tests__/*"
  ]
}
